		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>viewclass</from-outcome>
		<to-view-id>manage/viewclass.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>editclass</from-outcome>
		<to-view-id>admin/editclass.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
