<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
<navigation-rule>
	<!-- ***** ***** ***** ***** ***** -->
	<!-- ***** SITE NAVIGATION ***** -->
	<!-- ***** ***** ***** ***** ***** -->
	<from-view-id>*</from-view-id>
	
	<!-- *** GENERAL *** -->
	<navigation-case>
		<from-outcome>home</from-outcome>
		<to-view-id>/index.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>login</from-outcome>
		<to-view-id>/login.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>logout</from-outcome>
		<to-view-id>/login.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>message</from-outcome>
		<to-view-id>message.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>timetable</from-outcome>
		<to-view-id>/timetable.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	
	<!-- *** ROOM *** -->
	<navigation-case>
		<from-outcome>listrooms</from-outcome>
		<to-view-id>manage/listrooms.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>viewroom</from-outcome>
		<to-view-id>manage/viewroom.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>editroom</from-outcome>
		<to-view-id>admin/editroom.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>addroom</from-outcome>
		<to-view-id>admin/addroom.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	
	<!-- *** BOOKING *** -->
	<navigation-case>
		<from-outcome>listbookings</from-outcome>
		<to-view-id>manage/listbookings.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>viewbooking</from-outcome>
		<to-view-id>manage/viewbooking.xhtml</to-view-id>
		<redirect />
	</navigation-case>
	<navigation-case>
		<from-outcome>editbooking</from-outcome>
