	<!-- ***** ***** ***** ***** ***** -->
	<!-- ***** ***** OTHER ***** ***** -->
	<!-- ***** ***** ***** ***** ***** -->

<managed-bean>
	<managed-bean-name>roomManagedBean</managed-bean-name>
	<managed-bean-class>com.jwt.jsf.RoomManagedBean</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>
<managed-bean>
	<managed-bean-name>messageManagedBean</managed-bean-name>
	<managed-bean-class>com.jwt.jsf.MessageManagedBean</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>

</faces-config>
